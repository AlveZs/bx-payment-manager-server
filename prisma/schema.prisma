generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id           Int       @id @default(autoincrement())
  uuid         String    @unique @default(uuid())
  name         String
  nickname     String?
  phone        String?
  number       Int
  userName     String
  password     String
  wifiPassword String?
  address      String?
  payments     Payment[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deleted      DateTime?
}

model Payment {
  id          Int      @id @default(autoincrement())
  uuid        String   @unique @default(uuid())
  date        DateTime
  value       Decimal
  customerId  Int
  customer    Customer @relation(fields: [customerId], references: [id])
  type        String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
